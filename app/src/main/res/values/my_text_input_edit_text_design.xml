<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Editing TextInputLayout-->
    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:padding">2dp</item>-->
<!--        <item name="android:drawablePadding">4dp</item>-->
        <!--        <item name="android:textSize">48sp</item>-->

        <item name="android:isScrollContainer">false</item>
        <item name="android:lines">1</item>
        <!--        <item name="endIconMode">clear_text</item>-->
    </style>

    <style name="TextInputEditText.Name">
        <item name="android:hint">@string/name_hint</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.Amount">
        <item name="android:hint">@string/amount_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.PrincipalAmount">
        <item name="android:hint">@string/principal_amount_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.TotalAmount">
        <item name="android:hint">@string/total_amount_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.InterestAmount">
        <item name="android:hint">@string/interest_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.Address">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/address_hint</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="TextInputEditText.Rate">
        <item name="android:hint">@string/rate_hint</item>
        <item name="android:inputType">number|phone</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="TextInputEditText.Number">
        <item name="android:hint">@string/mobile_number_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="TextInputEditText.MemberType">
        <item name="android:hint">@string/member_type_hint</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="TextInputEditText.Date">
        <item name="android:hint">@string/date_hint</item>
        <item name="android:inputType">date</item>
        <item name="background">@color/clr_light_primary</item>
    </style>

    <style name="TextInputEditText.password">
        <item name="android:hint">@string/password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>