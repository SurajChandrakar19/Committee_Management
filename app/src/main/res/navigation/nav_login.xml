<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/nav_tab_login_fragment">

    <fragment
        android:id="@+id/nav_tab_login_fragment"
        android:name="com.skc.committeemanagement.login_tab.LoginTabFragment"
        android:label="@string/text_login_tab_fragment_label"
        tools:layout="@layout/login_tab_fragment">
        <action
            android:id="@+id/action_nav_tab_login_fragment_to_nav_tab_signup_fragment"
            app:destination="@id/nav_tab_signup_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_tab_signup_fragment"
        android:name="com.skc.committeemanagement.login_tab.SignupTabFragment"
        android:label="@string/text_signup_tab_fragment_label"
        tools:layout="@layout/signup_tab_fragment">
        <action
            android:id="@+id/action_nav_tab_signup_fragment_to_nav_tab_login_fragment"
            app:destination="@id/nav_tab_login_fragment" />
    </fragment>

</navigation>